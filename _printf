#include "main.h"


/**
 * _printf - Generates output based on the provided format string.
 * @format: The character string to be printed, which may include directives.
 *
 * Return: The count of characters printed.
 */

int _printf(const char *format, ...) {
    va_list args;
    int count = 0;

    va_start(args, format);

    while (*format != '\0') {
        if (*format == '%' && *(format + 1) != '\0') {
            switch (*(format + 1)) {
                case 'c':
                    putchar(va_arg(args, int));
                    count++;
                    break;
                case 's':
                    count += printf("%s", va_arg(args, char *));
                    break;
                case '%':
                    putchar('%');
                    count++;
                    break;
                default:
                    putchar('%');
                    putchar(*(format + 1));
                    count += 2;
                    break;
            }
            format += 2; // Move to the next format specifier
        } else {
            putchar(*format);
            count++;
            format++;
        }
    }

    va_end(args);
    return count;
}

